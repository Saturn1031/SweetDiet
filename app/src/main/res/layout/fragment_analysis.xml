<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".FragmentAnalysis">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="새로고침" />

            <ImageButton
                android:id="@+id/refresh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/refresh"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:background="@drawable/box_shape"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="오늘의 섭취 열량"
                    android:textSize="24sp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/MPpieChart"
                    android:layout_width="320dp"
                    android:layout_height="320dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:gravity="center_horizontal"
            android:background="@drawable/box_shape">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="16sp"
                    android:text="탄수화물 (g)" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/max_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="#FFD2D1D4"
                        android:background="@drawable/box_shape">
                        <LinearLayout
                            android:id="@+id/graph_carbohydrate"
                            android:layout_width="80dp"
                            android:layout_height="16dp"
                            android:orientation="horizontal"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/box_shape">
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_carbohydrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="0/N g" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="16sp"
                    android:text="단백질 (g)" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="#FFD2D1D4"
                        android:background="@drawable/box_shape">
                        <LinearLayout
                            android:id="@+id/graph_protein"
                            android:layout_width="80dp"
                            android:layout_height="16dp"
                            android:orientation="horizontal"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/box_shape">
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="0/N g" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="16sp"
                    android:text="지방 (g)" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="#FFD2D1D4"
                        android:background="@drawable/box_shape">
                        <LinearLayout
                            android:id="@+id/graph_fat"
                            android:layout_width="80dp"
                            android:layout_height="16dp"
                            android:orientation="horizontal"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/box_shape">
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_fat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="0/N g" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="당류 (g)"
                    android:textSize="16sp" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="#FFD2D1D4"
                        android:background="@drawable/box_shape">
                        <LinearLayout
                            android:id="@+id/graph_sugar"
                            android:layout_width="80dp"
                            android:layout_height="16dp"
                            android:orientation="horizontal"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/box_shape">
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_sugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="0/N g" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="16sp"
                    android:text="나트륨 (mg)" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="#FFD2D1D4"
                        android:background="@drawable/box_shape">
                        <LinearLayout
                            android:id="@+id/graph_sodium"
                            android:layout_width="80dp"
                            android:layout_height="16dp"
                            android:orientation="horizontal"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/box_shape">
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_sodium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:text="0/N mg" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="16sp"
                    android:text="콜레스테롤 (mg)" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="#FFD2D1D4"
                        android:background="@drawable/box_shape">
                        <LinearLayout
                        android:id="@+id/graph_cholesterol"
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="@color/green"
                        android:background="@drawable/box_shape">
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_cholesterol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:text="0/N mg" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:text="포화지방산 (g)" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:orientation="horizontal"
                    android:backgroundTint="#FFD2D1D4"
                    android:background="@drawable/box_shape">
                    <LinearLayout
                        android:id="@+id/graph_saturated_fat"
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="@color/green"
                        android:background="@drawable/box_shape">
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_saturated_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:text="0/N g" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:text="트랜스지방산 (g)" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:orientation="horizontal"
                    android:backgroundTint="#FFD2D1D4"
                    android:background="@drawable/box_shape">
                    <LinearLayout
                        android:id="@+id/graph_trans_fat"
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:orientation="horizontal"
                        android:backgroundTint="@color/green"
                        android:background="@drawable/box_shape">
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_trans_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:text="0/N g" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>